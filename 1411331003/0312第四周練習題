#include <iostream>
using namespace std;

// 函式宣告
int volume(int);
double volume(int, int);
int volume(int, int, int);

int main()
{
    int a, b, c;

    cout << "請輸入一個整數：" << endl;
    cin >> a;
    cout << "該數的立方體積為：" << volume(a) << endl;

    cout << "請輸入兩個整數：" << endl;
    cin >> a >> b;
    cout << "該圓柱體積為：" << volume(a, b) << endl;

    cout << "請輸入三個整數：" << endl;
    cin >> a >> b >> c;
    cout << "該長方體積為：" << volume(a, b, c) << endl;

    cout << "finished!" << endl;

    return 0;
}

// 計算立方體的體積
int volume(int a)
{
    return a * a * a;
}

// 計算圓柱體的體積
double volume(int a, int b)
{
    return a * a * 3.14159 * b;
}

// 計算長方體的體積
int volume(int a, int b, int c)
{
    return a * b * c;
}
