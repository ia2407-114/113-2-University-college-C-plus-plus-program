#include <stdio.h>
          
struct clientData {
    unsigned int ID; 
    char Name[15];     
    char math,computer;    
    double average;   
};

int main(void)
{
    FILE* cfPtr=NULL; er
    typedef struct clientData stu;
    
    if ((fopen_s (&cfPtr,"accounts.dat", "rb+"))!=0) {
        puts("File could not be opened.");
    }
    else {
        stu  client = { 0, "", 0,0, 0.0 };
        printf("%s", "Enter account number"
            " (1 to 100, 0 to end input): ");
        scanf_s("%d", &client.ID);

        while (client.ID != 0) {
            printf("%s", "Enter lastname, MATH,COMPUTER: ");
            scanf_s("%14s%9d%d", client.Name, 14, &client.math, &client.computer);
            client.average = (client.math + client.computer) / 2;
            fseek(cfPtr, (client.ID - 1) *
                sizeof(struct clientData), SEEK_SET);            
            fwrite(&client, sizeof(stu), 1, cfPtr);
            printf("%s", "Enter account number: ");
            scanf_s("%d", &client.ID);
        }

        fclose(cfPtr); 
    }
}
