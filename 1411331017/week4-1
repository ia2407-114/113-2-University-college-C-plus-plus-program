#include<iostream>
using std::cout;
using std::cin;
using std::endl;

int volume(int);
double volume(int,int);
int volume(int,int,int);

int main()
{
  double sidevalue=10.0;

    int a,b,c;
    cout<<"請輸入一個整數"<<endl;
    cin>>a;
    cout<<volume(a);

    cout<<"請輸入兩個整數"<<endl;
    cin>>a,b;
    cout<<volume(a,b);

    cout<<"請輸入三個整數"<<endl;
    cin>>a,b,c;
    cout<<volume(a,b,c);

  cout<<"finished"<<endl;
}

int volume(int a)
{
  return a*a*a;
}

int volume(int a,int b)
{
  return a*a*3.14159*b;
}

int volume(int a,int b,int c)
{
  return a*b*c;
}
